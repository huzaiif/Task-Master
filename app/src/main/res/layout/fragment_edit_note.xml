<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        tools:context=".fragments.EditNoteFragment">

        <!-- HEADING -->
        <TextView
            android:id="@+id/editNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif" />

        <!-- TITLE -->
        <EditText
            android:id="@+id/editNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editNoteHeading"
            android:layout_marginTop="16dp"
            android:hint="Enter task title"
            android:maxLines="1"
            android:textSize="18sp"
            android:padding="12dp"
            android:background="@drawable/pink_border"
            android:fontFamily="sans-serif" />

        <!-- DESCRIPTION -->
        <EditText
            android:id="@+id/editNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/editNoteTitle"
            android:layout_marginTop="12dp"
            android:hint="Enter task description"
            android:padding="12dp"
            android:gravity="top"
            android:textSize="16sp"
            android:background="@drawable/pink_border"
            android:fontFamily="sans-serif" />

        <!-- TIME PICKER FIELD -->
        <EditText
            android:id="@+id/editTaskTimeField"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editNoteDesc"
            android:layout_marginTop="12dp"
            android:hint="Select Task Date Time"
            android:focusable="false"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/pink_border"
            android:fontFamily="sans-serif" />

        <!-- PRIORITY SPINNER -->
        <Spinner
            android:id="@+id/editPrioritySpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editTaskTimeField"
            android:layout_marginTop="12dp"
            android:background="@drawable/pink_border"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

        <!-- SAVE BUTTON -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:src="@drawable/baseline_done_24"
            android:backgroundTint="@color/pink"
            android:contentDescription="Save Task" />

    </RelativeLayout>
</layout>
