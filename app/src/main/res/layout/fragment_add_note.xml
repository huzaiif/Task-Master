<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.AddNoteFragment"
        android:padding="12dp">

        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/addNoteHeading"
            android:layout_marginTop="16dp"
            android:hint="Enter task title"
            android:padding="12dp"
            android:maxLines="1"
            android:textSize="18sp"
            android:background="@drawable/pink_border"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/addNoteTitle"
            android:layout_marginTop="12dp"
            android:hint="Enter task description"
            android:padding="12dp"
            android:gravity="top"
            android:textSize="16sp"
            android:background="@drawable/pink_border"
            android:fontFamily="sans-serif"/>

        <!-- ================= TASK TIME FIELD ================= -->

        <EditText
            android:id="@+id/taskTimeField"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/addNoteDesc"
            android:layout_marginTop="12dp"
            android:hint="Select Task Date Time"
            android:focusable="false"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/pink_border"
            android:fontFamily="sans-serif" />

        <!-- ================= PRIORITY SPINNER ================= -->

        <Spinner
            android:id="@+id/prioritySpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/taskTimeField"
            android:layout_marginTop="12dp"
            android:background="@drawable/pink_border"
            android:padding="8dp"
            android:spinnerMode="dropdown" />

    </RelativeLayout>
</layout>
